@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers
@using MVC_Application.SomeEnums;
@model MVC_Application.Models.Employee;

<h2> Create Employee Record</h2>
<form asp-controller="Employee" asp-action="Create" method="post">
    <label asp-for="EmpId">Employee ID</label>
    <input type="text" asp-for="EmpId" /><br /><br />
    <label asp-for="Name"></label>
    <input asp-for="Name" /><br /><br />
    <label asp-for="Address"></label>
    <input asp-for="Address"><br /><br />
    <label asp-for="Department"></label>
    <select asp-for="Department" asp-items="Html.GetEnumSelectList<Departments>()"></select><br /><br />
    <label asp-for="Salary"></label>
    <input asp-for="Salary"><br /><br />
    <input type="submit" value="Save" />
</form>
