@model IEnumerable<Employee>

@{
    Layout = "_Layout";
    var title = "Employee List";
    ViewData["Title"] = title;
}

<h3>@title</h3>

<a asp-controller="Employee" asp-action="CreateEmployee" class="btn btn-secondary">Add Employee</a>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone No.</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model == null)
        {
            <tr><td>No Employee Data</td></tr>   
        }else{
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Address</td>
                <td>@employee.PhoneNo</td>
                <td>
                    <a asp-controller="Employee" asp-route-id="@employee.Id">Details</a>
                    <a asp-controller="Employee" asp-route-id="@employee.Id">Edit</a>
                    <a asp-controller="Employee" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>